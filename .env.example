# Kappari - Paprika API Client Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# USER CREDENTIALS (REQUIRED)
# ===========================================
# Your Paprika account email address
KAPPARI_EMAIL=your_email@example.com

# Your Paprika account password
KAPPARI_PASSWORD=your_password_here

# ===========================================
# DATABASE CONFIGURATION (REQUIRED)
# ===========================================
# Path to local Paprika SQLite database
# Windows default: %APPDATA%\Paprika Recipe Manager 3\Paprika.sqlite
# Mac default: ~/Library/Application Support/Paprika Recipe Manager 3/Paprika.sqlite
KAPPARI_DB_PATH=/path/to/Paprika.sqlite

# Device ID for license validation (required for Windows)
# On Windows, this comes from registry: HKLM\SOFTWARE\Microsoft\Cryptography\MachineGuid
# This should match the value you copied from your licensed Windows device
KAPPARI_DEVICE_ID=00000000-0000-0000-0000-000000000000

# Directory to backup/archive database (optional)
# KAPPARI_DB_BACKUP_PATH=/path/to/backup

# ===========================================
# API CONFIGURATION
# ===========================================
# Base URL for Paprika API (shouldn't need to change this)
# KAPPARI_API_BASE_URL=https://www.paprikaapp.com/api/v2

# User Agent string for API requests
# KAPPARI_USER_AGENT=Paprika Recipe Manager 3/3.3.1 (Microsoft Windows NT 10.0.26100.0)

# API request timeout in seconds
# KAPPARI_API_TIMEOUT=30

# JWT token (automatically populated after successful authentication)
# KAPPARI_JWT_TOKEN=

# License key (if known, otherwise extracted from database)
# KAPPARI_LICENSE_KEY=

# License signature (if known, otherwise extracted from database)
# KAPPARI_LICENSE_SIGNATURE=

# ===========================================
# ENCRYPTION KEYS
# ===========================================
# Encryption keys for database fields (shouldn't need to change)
# KAPPARI_PURCHASE_DATA_KEY=Purchase Data
# KAPPARI_PURCHASE_SIGNATURE_KEY=Purchase Signature

# ===========================================
# SYNC CONFIGURATION
# ===========================================
# Enable/disable automatic sync
# KAPPARI_SYNC_ENABLED=true

# Sync interval in minutes
# KAPPARI_SYNC_INTERVAL=15

# WebSocket URL for real-time sync notifications
# KAPPARI_WEBSOCKET_URL=wss://www.paprikaapp.com/ws/sync/

# ===========================================
# EXPORT/IMPORT PATHS
# ===========================================
# Directory for exported recipes
# KAPPARI_EXPORT_PATH=./exports

# Directory for recipe imports
# KAPPARI_IMPORT_PATH=./imports

# Default export format (json, paprikarecipe, html, markdown, text)
# KAPPARI_EXPORT_FORMAT=json

# ===========================================
# LOGGING & DEBUG
# ===========================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# KAPPARI_LOG_LEVEL=INFO

# Logging files go into this directory
# KAPPARI_LOG_PATH=./logs

# Enable detailed API request/response logging
# KAPPARI_DEBUG_API_REQUESTS=false

# Enable SQL query logging
# KAPPARI_DEBUG_SQL_QUERIES=false

# Pretty print JSON responses
# KAPPARI_PRETTY_JSON=true

# ===========================================
# NETWORK CONFIGURATION
# ===========================================
# HTTP proxy (if needed)
# KAPPARI_HTTP_PROXY=

# HTTPS proxy (if needed)
# KAPPARI_HTTPS_PROXY=

# Verify SSL certificates
# KAPPARI_VERIFY_SSL=true

# ===========================================
# CAPTURE FILES (for analysis/debugging)
# ===========================================
# Path to Fiddler session archives (.saz files)
# KAPPARI_CAPTURE_SAZ_PATH=./captures

# Path to raw HTTP capture files
# KAPPARI_CAPTURE_RAW_PATH=./captures/raw

# ===========================================
# CACHE SETTINGS
# ===========================================
# Enable local caching of API responses
# KAPPARI_CACHE_ENABLED=true

# Cache directory
# KAPPARI_CACHE_PATH=./cache

# Cache TTL in seconds (3600 = 1 hour)
# KAPPARI_CACHE_TTL=3600

# ===========================================
# RECIPE STORAGE
# ===========================================
# Local directory for recipe JSON files
# KAPPARI_RECIPES_LOCAL_PATH=./recipes

# Store recipe photos locally
# KAPPARI_STORE_PHOTOS_LOCALLY=true

# Photo storage directory
# KAPPARI_PHOTOS_PATH=./photos

# ===========================================
# DEVELOPMENT/TESTING
# ===========================================
# Run in dry-run mode (no actual API calls)
# KAPPARI_DRY_RUN=false

# Use mock data for testing
# KAPPARI_USE_MOCK_DATA=false

# Mock data directory
# KAPPARI_MOCK_DATA_PATH=./test/mock_data

# *** WARNING: SECURITY RISK ***
# Automatically save JWT tokens to .env file after authentication
# This writes sensitive authentication tokens to disk in plain text
# Only enable if you understand the security implications
# KAPPARI_PERSIST_TOKENS=false