# Kappari - Paprika API Client Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# PAPRIKA INSTALLATION LOCATION
# ===========================================
# Path to your Paprika Recipe Manager 3 data folder
# Windows: C:\Users\{YourName}\AppData\Local\Paprika Recipe Manager 3
# Mac: ~/Library/Application Support/Paprika Recipe Manager 3  
# If not set, will try to auto-detect based on your platform
# All other paths below can be relative to this directory or absolute
# KAPPARI_ROOT_DIR=/path/to/Paprika Recipe Manager 3

# ===========================================
# AUTHENTICATION & CREDENTIALS
# ===========================================
# Your Paprika account email address
# If not set, will try to load from your Paprika database
KAPPARI_EMAIL=your_email@example.com

# Your Paprika account password (required for API sync)
KAPPARI_PASSWORD=your_password_here

# Device ID for license validation (REQUIRED)
# This must match the device where Paprika was licensed
# On Windows: Get from HKLM\SOFTWARE\Microsoft\Cryptography\MachineGuid
# On Mac/Linux: Check Paprika's logs or use system UUID
KAPPARI_DEVICE_ID=00000000-0000-0000-0000-000000000000

# Encryption keys for license data (advanced users only)
# KAPPARI_PURCHASE_DATA_KEY=Purchase Data
# KAPPARI_PURCHASE_SIGNATURE_KEY=Purchase Signature

# *** WARNING: SECURITY RISK ***
# Automatically save JWT tokens to .env file after authentication
# This writes sensitive authentication tokens to disk in plain text
# Only enable if you understand the security implications
# KAPPARI_PERSIST_TOKENS=false

# JWT token storage (set automatically when PERSIST_TOKENS=true)
# KAPPARI_JWT_TOKEN=your-jwt-token-here

# ===========================================
# OPERATIONAL MODE
# ===========================================
# Run in dry-run mode (no actual API calls)
# KAPPARI_DRY_RUN=false

# Use mock data instead of real API calls (testing only)
# KAPPARI_USE_MOCK_DATA=false

# Mock data directory (default: ./test/mock_data) 
# KAPPARI_MOCK_DATA_DIR=./test/mock_data

# ===========================================
# API CONFIGURATION
# ===========================================
# Base URL for Paprika API
# KAPPARI_API_BASE_URL=https://www.paprikaapp.com/api/v2

# API request timeout in seconds
# KAPPARI_API_TIMEOUT=30

# Custom User-Agent string for API requests
# KAPPARI_USER_AGENT=Paprika Recipe Manager 3/3.3.1 (Microsoft Windows NT 10.0.26100.0)

# ===========================================
# SYNC & WEBSOCKET CONFIGURATION
# ===========================================
# Enable/disable sync functionality
# KAPPARI_SYNC_ENABLED=true

# Sync interval in minutes
# KAPPARI_SYNC_INTERVAL=15

# WebSocket URL for real-time sync
# KAPPARI_WEBSOCKET_URL=wss://www.paprikaapp.com/ws/sync/

# ===========================================
# NETWORK & PROXY CONFIGURATION
# ===========================================
# HTTP proxy settings (if required by your network)
# KAPPARI_HTTP_PROXY=http://proxy.example.com:8080
# KAPPARI_HTTPS_PROXY=https://proxy.example.com:8080

# SSL certificate verification (set to false only if absolutely necessary)
# KAPPARI_VERIFY_SSL=true

# ===========================================
# STORAGE & FILE PATHS
# ===========================================
# All paths below can be absolute or relative to KAPPARI_ROOT_DIR
# Directories end with _DIR, files end with _FILE

# Database file location (relative: Database/Paprika.sqlite)
# KAPPARI_DB_FILE=Database/Paprika.sqlite

# Database backup directory (relative: Database/Backups)
# KAPPARI_DB_BACKUP_DIR=Database/Backups

# Photos directory (relative: Photos)
# KAPPARI_PHOTOS_DIR=Photos

# Store photos locally instead of just URLs
# KAPPARI_STORE_PHOTOS_LOCALLY=true

# Local recipes storage directory (relative: recipes)
# KAPPARI_RECIPES_LOCAL_DIR=recipes

# Export directory for recipes (relative: exports)  
# KAPPARI_EXPORT_DIR=exports

# Import directory for recipes (relative: imports)
# KAPPARI_IMPORT_DIR=imports

# Export format for recipes (json, xml, etc.)
# KAPPARI_EXPORT_FORMAT=json

# ===========================================
# CACHE CONFIGURATION
# ===========================================
# Enable local caching for performance
# KAPPARI_CACHE_ENABLED=true

# Cache directory (relative: cache)
# KAPPARI_CACHE_DIR=cache

# Cache time-to-live in seconds (default: 3600 = 1 hour)
# KAPPARI_CACHE_TTL=3600

# ===========================================
# LOGGING & DEBUG
# ===========================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# KAPPARI_LOG_LEVEL=INFO

# Logs directory (relative: Logs)
# KAPPARI_LOG_DIR=Logs

# Enable detailed API request/response logging
# KAPPARI_DEBUG_API_REQUESTS=false

# Enable SQL query logging
# KAPPARI_DEBUG_SQL_QUERIES=false

# Pretty-print JSON in logs (easier to read but more verbose)
# KAPPARI_PRETTY_JSON=true